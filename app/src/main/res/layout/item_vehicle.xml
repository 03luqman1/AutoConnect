<!-- item_vehicle.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- ImageView for vehicle logo -->
    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        android:src="@drawable/background" />

    <!-- Container for status TextViews -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/logoImageView"
        android:orientation="vertical">

        <!-- TextView for registration number -->
        <TextView
            android:id="@+id/registrationNumberTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:background="@drawable/plate_background"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="30sp"/>

        <!-- LinearLayout for MOT status -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- ImageView for MOT status -->
            <ImageView
                android:id="@+id/motStatusImageView"
                android:layout_width="15dp"
                android:layout_height="25dp"
                android:layout_marginStart="0dp"

                android:scaleType="fitCenter"
                android:src="@drawable/orange_questionmark" />

            <!-- TextView for MOT status -->
            <TextView
                android:id="@+id/motStatusTextView"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:textColor="@color/white"

                android:text=" MOT"
                android:gravity="center"
                android:textSize="11sp"/>


        </LinearLayout>

        <!-- LinearLayout for Tax status -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- ImageView for Tax status -->
            <ImageView
                android:id="@+id/taxStatusImageView"
                android:layout_width="15dp"
                android:layout_height="25dp"
                android:layout_marginStart="0dp"

                android:scaleType="fitCenter"
                android:src="@drawable/orange_questionmark" />

            <!-- TextView for Tax status -->
            <TextView
                android:id="@+id/taxStatusTextView"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:textColor="@color/white"

                android:text=" TAX"
                android:gravity="center"
                android:textSize="11sp"/>


        </LinearLayout>

        <!-- LinearLayout for Insurance status -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- ImageView for Insurance status -->
            <ImageView
                android:id="@+id/insuranceStatusImageView"
                android:layout_width="15dp"
                android:layout_height="25dp"
                android:layout_marginStart="0dp"

                android:scaleType="fitCenter"
                android:src="@drawable/orange_questionmark" />

            <!-- TextView for Insurance status -->
            <TextView
                android:id="@+id/insuranceStatusTextView"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:textColor="@color/white"

                android:text=" INSURANCE"
                android:gravity="center"
                android:textSize="11sp"/>


        </LinearLayout>

        <!-- LinearLayout for Service status -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- ImageView for Service status -->
            <ImageView
                android:id="@+id/serviceStatusImageView"
                android:layout_width="15dp"
                android:layout_height="25dp"
                android:layout_marginStart="0dp"

                android:scaleType="fitCenter"
                android:src="@drawable/orange_questionmark" />

            <!-- TextView for Service status -->
            <TextView
                android:id="@+id/serviceStatusTextView"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:textColor="@color/white"

                android:text=" SERVICE"
                android:gravity="center"
                android:textSize="11sp"/>


        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

