<!-- item_vehicle.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- ImageView for vehicle logo -->
    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        android:src="@drawable/background" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/logoImageView"
        android:orientation="vertical">
        <!-- TextView for registration number -->
        <TextView
            android:id="@+id/registrationNumberTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:background="@drawable/plate_background"
            android:textStyle="bold"
            android:gravity="center"

            android:textSize="30sp"/>

        <!-- TextView for MOT status -->
        <TextView
            android:id="@+id/motStatusTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="AUTO CONNECT"

            android:textSize="10sp"/>

        <!-- TextView for Tax status -->
        <TextView
            android:id="@+id/taxStatusTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="AUTO CONNECT"

            android:textSize="10sp"/>

        <!-- TextView for Insurance status -->
        <TextView
            android:id="@+id/insuranceStatusTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AUTO CONNECT"

            android:textColor="@color/white"
            android:textSize="10sp"/>
    </LinearLayout>
</RelativeLayout>
