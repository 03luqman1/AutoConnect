<!-- plate_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color (yellow) -->
    <solid android:color="#FFFF00" />

    <!-- Outer stroke (gray) -->
    <stroke
        android:width="2dp"
        android:color="#AAAAAA" />

    <!-- Inner stroke (black, to resemble plate borders) -->
    <stroke
        android:width="1dp"
        android:color="#000000" />

    <!-- Padding to create the border -->
    <padding
        android:left="5dp"
        android:right="5dp"
        android:top="2dp"
        android:bottom="2dp" />

    <!-- Add corner radius for slightly rounded corners -->
    <corners android:radius="8dp" />
</shape>
